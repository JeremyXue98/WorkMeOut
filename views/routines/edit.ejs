<!DOCTYPE html>
<html>
    <head>
        <% include ../partials/head %>
        <!-- THIS SCRIPT IS NEEDED TO GET SOME DATA -->
    </head>
    <body>
        <div class="container-fluid">
            <div class="page-header text-center">
                <h1><span class="fa fa-anchor"></span>Routines</h1>
                <a href="/" class="btn btn-default btn-sm">Home</a>    
                <a href="/routines/new" class="btn btn-default btn-sm">Back to Routines</a>
            </div>
            <div class="row">
                <!-- show any messages that come back with authentication -->
                <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
                <% } %>
                <!-- LOGIN FORM -->
            </div>
            <div class="row">
                <form action="/routines/new" method="post" id="routineForm">
                    <div class="form-group">
                        <label>name</label>
                        <input type="text" class="form-control" name="name" id="nameRoutine">
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea type="text" class="form-control" name="description" rows="2" id="descriptionRoutine"></textarea>
                    </div>
                <div id="weeks"></div>


                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                    
                </div>
                
                <button type="button" id="addWeek" class="btn btn-success btn-lg">Add Week</button>
                <button type="submit" id="addRoutineButton" class="btn btn-warning btn-lg">Create Routine</button>
                </form>
            </div>
        </div>
        <hr>
        <p>Already have an account? <a href="/login">Login</a></p>
        <p>Or go <a href="/">home</a>.</p>
        <!-- ADD FOOTER -->
    </body>
</html>